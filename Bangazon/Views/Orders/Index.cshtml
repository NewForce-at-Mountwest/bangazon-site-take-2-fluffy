@model IEnumerable<Bangazon.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCompleted)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.PaymentType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>

            @if (item.DateCompleted != null)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.DateCompleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentType.Description)

                    (@Html.DisplayFor(modelItem => item.PaymentType.AccountNumber))
                </td>
            }
            else
            {
                <td>
                    In Process
                </td>
                <td>
                    Incomplete
                </td>
            }


            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserId">Details</a>

                @if (item.DateCompleted == null)
                {
                    <span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.OrderId">Cancel Order</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
