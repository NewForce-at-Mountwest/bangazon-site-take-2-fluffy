@model Bangazon.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>
        @Html.DisplayFor(model => model.Title)
    </h4>
    <hr />
    <dl class="row">


        <dt class="col-sm-2">
            @if (Model.ProductImage != null)
            {
                var base64 = Convert.ToBase64String(Model.ProductImage);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);


            <img class="userImg" style="width:150px" src="@imgSrc" />
            }
        </dt>

            <dd class="col-sm-10">

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        @if (Model.City != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
        }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductType)
        </dt>
        <dd class="col-sm-10">
            @Html.ActionLink(Model.ProductType.Label, "Details", "ProductTypes", new { Id = Model.ProductType.ProductTypeId }, null)
        </dd>
    </dl>

</div>
@if (Model.Active == true && Model.Quantity > 0) { 
<div class="form-group">
    <a class="btn btn-primary"
            asp-controller="Products" asp-action="AddToCart" asp-route-id="@Model.ProductId">
        Add to Cart
    </a>
    </div>
    
}
else
{
    <div class="text-danger">Out of Stock</div>
}
    
<div>
    <a asp-action="Index">View All Products</a>  |
    <span>@Html.ActionLink("View All Categories", "Index", "ProductTypes" )</span>

</div>

